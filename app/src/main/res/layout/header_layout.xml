<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#222831">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"
        android:id="@+id/header">

        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/profile_image"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/profile_pic_oval_shape"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="rathansreeramoju@gmail.com"
            android:textSize="15sp"
            android:fontFamily="@font/ubuntu_regular"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            app:layout_constraintStart_toStartOf="@id/profile_image"
            app:layout_constraintEnd_toEndOf="@id/profile_image"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/home"
        app:layout_constraintTop_toBottomOf="@id/header"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/home"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/white"
        android:textSize="16sp"

        android:id="@+id/text_home"
        app:layout_constraintStart_toEndOf="@id/home"
        app:layout_constraintTop_toTopOf="@id/home"
        app:layout_constraintBottom_toBottomOf="@id/home"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile"
        app:layout_constraintTop_toBottomOf="@id/home"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/profile"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile Information"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/contact_info"
        app:layout_constraintStart_toEndOf="@id/profile"
        app:layout_constraintTop_toTopOf="@id/profile"
        app:layout_constraintBottom_toBottomOf="@id/profile"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/post"
        app:layout_constraintTop_toBottomOf="@id/profile"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/post"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Information"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/post_info"
        app:layout_constraintStart_toEndOf="@id/post"
        app:layout_constraintTop_toTopOf="@id/post"
        app:layout_constraintBottom_toBottomOf="@id/post"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/favorite"
        app:layout_constraintTop_toBottomOf="@id/post"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/favourite"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favourite"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/fav_info"
        app:layout_constraintStart_toEndOf="@id/favourite"
        app:layout_constraintTop_toTopOf="@id/favourite"
        app:layout_constraintBottom_toBottomOf="@id/favourite"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/login"
        app:layout_constraintTop_toBottomOf="@id/favourite"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/login_info"
        app:layout_constraintStart_toEndOf="@id/login"
        app:layout_constraintTop_toTopOf="@id/login"
        app:layout_constraintBottom_toBottomOf="@id/login"
        android:layout_marginStart="50dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/logout"
        app:layout_constraintTop_toBottomOf="@id/favourite"
        android:layout_marginTop="30dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/logout"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/logout_info"
        app:layout_constraintStart_toEndOf="@id/logout"
        app:layout_constraintTop_toTopOf="@id/logout"
        app:layout_constraintBottom_toBottomOf="@id/logout"
        android:layout_marginStart="50dp"
        android:visibility="invisible"/>


</androidx.constraintlayout.widget.ConstraintLayout>